				<table
					style="border-collapse:collapse;margin-left:6.5pt"
					cellspacing="0"
				>
					<tr style="height:17pt">
						<td style="width:90pt;">
							<p class="s1">Nama</p>
						</td>
						<td style="width:410pt;">
							<p class="s1">: {{pegawai.nama}}</p>
						</td>
					</tr>
					<tr style="height:17pt">
						<td style="width:90pt;">
							<p class="s1">NIP</p>
						</td>
						<td style="width:410pt;">
							<p class="s1">: {{pegawai.nip}}</p>
						</td>
					</tr>
					<tr style="height:17pt">
